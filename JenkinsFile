pipeline {
  agent any
  tools {nodejs "Node18"}


  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'C:\Program Files\nodejs\npm install'
        // sh 'npm init'
        // sh 'npm install cypress --save-dev'
        // sh 'npm install cypress-restful-api --save-dev'
      }
    }

    stage('Run Tests') {
      steps {
        sh 'npx cypress run --spec cypress/e2e/apitests.cy.js --config-file cypress.config.js'
      }
      post {
        always {
          junit 'cypress/results/*.xml'
          archiveArtifacts 'cypress/screenshots/**'
          archiveArtifacts 'cypress/videos/**'
        }
      }
    }
  }
}
